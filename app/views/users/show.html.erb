<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Datos del usuario</h1>
      <span class="line"></span>
      <hr>
      <div class="all_width blue_box">
        <table class="table table-striped tablesorter table-condensed">
          <thead>
            <tr>
              <th class="header">Email</th>
              <th class="header">Editar</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @user.email %></td>
              <td><%= link_to "Editar", edit_user_path(@user), :class => "btn btn-warning btn-xs" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>