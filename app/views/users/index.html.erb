<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Todos los administradores</h1>
      <span class="line"></span>
      <hr>
      <div class="all_width blue_box">
        <table class="table table-striped tablesorter table-condensed">
          <thead>
            <tr>
              <th class="header", align="center">Email</th>
              <th class="header">Editar</th>
              <th class="header">Borrar</th>
            </tr>
          </thead>
          <tbody>
            <% @user.each do  |u| %>
            <tr>
              <td align="center"><%= u.email %></td>
              <td><%= link_to "Editar", edit_user_path(u), :class => "btn btn-warning btn-xs" %></td>
              <td><%= link_to "Borrar", u, method: :delete, 
              data: { confirm: "Seguro que quieres eliminar a #{u.email}" }, 
              class: "btn btn-danger btn-xs" %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>