<% provide(:title, "Artículos") %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= link_to "Crear artículo", new_post_path, 
      class: "btn btn-primary pull-right edit-btn-margin-left top_buttons" %>
      <% if @posts.empty? %>
        <h1>No hay artículos en este momento</h1>
        <span class="line"></span>
        <hr>
      <% else %>
        <h1>Artículos</h1>
        <span class="line"></span>
        <hr>
        <% @posts.each do |post| %>
        <%= image_tag(post.avatar_url, class: "img_show") %><br>
        <h3><%= link_to "#{post.title.gsub("-"," ")}", post_path(post) %></h3>
        <h4><%= post.summary %></h4>
        <% end %>
      <% end %>
    </div>
  </div>
</div>