- provide(:title, "Inicia sesión")
.container
  .row
    .col-md-12
      = link_to "Volver al inicio", root_url, class: "btn btn-primary btn pull-right top_buttons_2"
      %h2 Ingresa tus datos para entrar
      %span.line
      %hr
      = simple_form_for :session, url: login_path do |f|
        .register_form
          = f.input :email, autofocus: true, class: "form-control"
          = f.input :password, class: "form-control"
          = f.submit "Iniciar sesión", class: "btn btn-warning btn-block"
          %br